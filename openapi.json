{
  "openapi": "3.0.0",
  "info": {
    "description": "The API serves as the interface for APIs doc",
    "version": "1.0.0",
    "title": "Boilerplate",
    "termsOfService": "",
    "contact": {
      "name": "Usman Qamar",
      "email": "usmanqamar189@hotmail.com"
    }
  },
  "servers": [
    {
      "url": "",
      "description": "Boiler plate API"
    }
  ],
  "security": [
    {
      "retail_cookie_auth": []
    },
    {
      "retail_api_key_auth": []
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Information regarding a retail store visitor"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": ["Visitor"],
        "summary": "An endpoint to create a session for visitor authentication",
        "operationId": "createVisitorSession",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VisitorSessionByPhoneNumber"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful authentication of user credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Visitor"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Input"
          },
          "401": {
            "description": "Unauthorized. An Expert authenticated session needs to be created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique Identifier for the expert"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "role": {
            "description": "The role the expert is currently assigned",
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "profileUrl": {
            "type": "string"
          }
        }
      }
    },
    "requestBodies": {
      "User": {
        "description": "Information about the Afiniti client visitor",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        },
        "required": true
      }
    },
    "responses": {
    },
    "securitySchemes": {
      "retail_cookie_auth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "afinitiretail.esid"
      },
      "retail_api_key_auth": {
        "type": "apiKey",
        "description": "Afiniti Retail API Key Auth",
        "name": "X-API-KEY",
        "in": "header"
      }
    }
  }
}
