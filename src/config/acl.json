[
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "users",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "users/:id",
        "methods": ["PUT"],
        "action": "allow"
      }
    ]
  }
]
